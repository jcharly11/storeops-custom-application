[Unit]
Description=<APPLICATION_NAME>
Requires=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory=/root/<APPLICATION_ID>
ExecStart=/usr/bin/bash -c "cd /root/<APPLICATION_ID> && source ./venv/bin/activate && uvicorn main:app --host localhost --port 8001"
SyslogIdentifier=<APPLICATION_ID>
RemainAfterExit=yes
Restart=always
RestartSec=60s
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
